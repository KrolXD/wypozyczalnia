<form action="/customers/addEditCustomers" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{list._id}}">
    <label>Name</label>
    <input type="text" name="name" placeholder="Name" value="{{list.name}}" required>
    <label>Last name</label>
    <input type="text" name="lastName" placeholder="Last name" value="{{list.lastName}}" required>
    <label>Address</label>
    <input type="text" name="address" placeholder="Address" value="{{list.address}}" required>
    <label>Phone number</label>
    <input type="tel" name="pNumber" value="{{list.phoneNumber}}" pattern="[0-9]{9}" required>
    <label>Date of registration</label>
    <input type="date" name="date" value="{{list.dateOfRegistration}}" required>
    <button type="submit">Submit</button>
</form>