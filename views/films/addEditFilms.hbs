<form action="/films/addEditFilms" method="POST" autocomplete="off">
    <div class="wrapper">
        <input type="hidden" name="_id" value="{{list._id}}">
        <input type="hidden" name="filmId" value="{{list.filmId}}">
        <label>Title</label>
        <input type="text" name="title" placeholder="Title" value="{{list.tytul}}" required>
        <label>Directors</label>
        <input type="text" name="directors" placeholder="Directors" value="{{list.rezyser}}" required>
        <label>Genres</label>
        <input type="text" name="genres" placeholder="Genres" value="{{list.gatunek}}" required>
        <label>Actors</label>
        <input type="text" name="actors" placeholder="Actors" value="{{list.aktorzy}}" required>
            <div class="shorts">
                <div class="short">
                    <label>Added</label>
                    <input type="date" name="added" value="{{list.dataDodania}}" required>
                    <label>Availability</label>
                    <input id="test2" type="checkbox" name="availability" >
                </div>
                <div class="short">
                    <label>Rating</label>
                    <input type="number" name="rating" min="1" max="10" step="1" value="{{list.ocena}}">
                    <label>Time</label>
                    <input type="number" name="time" placeholder="0" min="1" value="{{list.czas}}" required>
                </div>
            </div>
        <label>Description</label>
        <input type="text" name="description" placeholder="Description" value="{{list.opis}}">
        <lable id="test" style="display: none;">{{list.dostepnosc}}</lable>
        <button type="submit">Submit</button>
    </div>
</form>


<script>

window.onload = load;

function load()
{
    
    var isChecked = document.getElementById("test").textContent;
    
    if(isChecked==1)
    {
        document.getElementById("test2").checked=true;
    }
    else
    {
        document.getElementById("test2").checked=false;
    }
}
</script>